<!DOCTYPE html>
<html>
  <head>
    <title>家庭保障规划</title>
    <%= csrf_meta_tags %>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
		<script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

    <%= stylesheet_link_tag  'application','color03','sm_base', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application","vendor/jquery.anystretch.min", 'data-turbolinks-track': 'reload'%>
  </head>

  <body>
  	<div class="navbar clearfix">
	    <div class="container">
	      <a class="navbar-brand" href="/">家庭保障规划</a>
	      <ul class="nav left">
	        <% if @current_user && @current_user.role == 1 %>
	          <li><%= link_to "关于","#" %></li>
	          <li><%= link_to "用户管理","#" %></li>
	        <% elsif @current_user && @current_user.role == 2 %>
	          <li><%= link_to "关于","#" %></li>
	        <% elsif @current_user && @current_user.role == 0 %>
	          <li><%= link_to "关于","#" %></li>
	        <% end %>
	      </ul>
	      <ul class="nav right">
	        <% if @current_user %>
	          <li><%= link_to "用户名:"+@current_user.name,"#" %></li>
	          <li><%= link_to "权限:"+Account::ROLE[@current_user.role],"#"%></li>
	          <li><%= link_to "退出","/logout",method:'delete' %></li>
	        <% else %>
	          <li><%= link_to "登录","/login" %></li>
	        <% end %>
	      </ul>
	    </div>
	  </div>
    <%= yield %>
		<% if flash.notice %>
	    <div class="notice"><%= flash.notice %></div>
	  <% end %>
	  <div class="footer">
	    <div>
	       <a href="http://www.beian.miit.gov.cn/"><p class="align">沪ICP备19036706号-1</p></a>
	    </div>
	  </div>

	  <script>
	  	$('.home-banner').anystretch();

	    var hideNotice = function(){
	      $(".notice").fadeOut("slow");
	    }

	    setTimeout(hideNotice, 2000);
	  </script>
  </body>
</html>
