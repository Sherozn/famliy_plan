
<div class="modal-dialog">
  <div class="modal-content">
      <%= form_for @note,url: "#", authenticity_token: true, html:{class: "form-horizontal",id: "pop_form" , multipart: true} do |f| %>
      <div class="modal-header">
         <button type="button" onclick="cencel();" aria-label="Close" class="close">
            <span aria-hidden="true">&times;</span>
         </button>
         <h4 id="myModalLabel" class="modal-title">添加产品</h4>
      </div>
      <div class="modal-body">
        <div class="form-group content-wrapper" style="border: 0px">
          <div class="row">
            <label class="col-lg-3 control-label">产品代码</label>
            <div class="col-lg-9">
              <%=f.text_field :name, placeholder:"请输入产品代码", class: "form-control" %>
            </div>
          </div>
          
        </div>
      </div>
      <div class="modal-footer">
         <button type="button" onclick="cencel();" class="btn btn-default">取消</button>
         <button type="submit" class="btn btn-primary" >保存</button>
      </div>
      <% end %> 
  </div>
</div>
<script type="text/javascript">
   function cencel(){
      $('#myModal').remove();
      $('.modal-backdrop').remove();
    }
</script>